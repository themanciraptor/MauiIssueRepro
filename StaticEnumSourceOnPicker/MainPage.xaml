<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StaticEnumSourceOnPicker"
             x:DataType="local:MainPageViewModel"
             x:Class="StaticEnumSourceOnPicker.MainPage">
  <VerticalStackLayout Padding="30,0"
                       Spacing="25">
    <!-- This works with MauiXamlInflater = SoureGen -->
    <Picker SelectedItem="{Binding Selected}">
      <Picker.ItemsSource>
        <Array Type="{Type local:MyEnum}">
          <local:MyEnum>None</local:MyEnum>
          <local:MyEnum>Blue</local:MyEnum>
          <local:MyEnum>Green</local:MyEnum>
          <local:MyEnum>Red</local:MyEnum>
        </Array>
      </Picker.ItemsSource>
    </Picker>
    <!-- This does not work with MauiXamlInflater = SoureGen, but works without -->
    <Picker ItemsSource="{Static local:MainPageViewModel.EnumValues }" SelectedItem="{Binding Selected}"/>
    <Picker ItemsSource="{Static local:MainPageViewModel.PrimitiveValues }" SelectedItem="{Binding SelectedString}"/>
  </VerticalStackLayout>
</ContentPage>
